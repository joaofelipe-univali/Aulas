int main() { //Ínicio do código
    long long int codigo; //definição da var "codigo" com o tipo de código long para maior captação de caracteres 

    int d12, d11, d10, d9, d8, d7, d6, d5, d4, d3, d2, d1, d0, resultado1, resultado2;  //definição de variáveis 


    cout << "Digite o seu código de barras: "; //Solicitação do código ao usuário 
    cin >> codigo; // armazenando o valor inserido do cout na variavel codigo 

    if (codigo > 9999999999999) {  // Conferindo se "codigo" está maior que 13 caracteres
        cout << "Seu codigo de barras é maior que o exigido" << endl;
        return 0;
    }
    else if (codigo < 1000000000000){ // Conferindo se "codigo" é menor que 13 caracteres 
        cout << "Seu codigo de barras é menor que o exigido" << endl;
        return 0;
    };


    d0 = codigo % 10;// Utilização do MOD para difinir qual é o valor da variavel         
    codigo = codigo / 10;// Redução do código atráves da divisão
    d1 =codigo % 10;
    codigo = codigo / 10;        
    d2 = codigo % 10;        
    codigo = codigo / 10;       
    d3 =codigo % 10;
    codigo = codigo / 10;
    d4 = codigo % 10;
    codigo = codigo / 10;
    d5 =codigo % 10;
    codigo = codigo / 10;
    d6 = codigo % 10; 
    codigo = codigo / 10;
    d7 =codigo % 10; 
    codigo = codigo / 10;
    d8 = codigo % 10;
    codigo = codigo / 10;
    d9 =codigo % 10; 
    codigo = codigo / 10;
    d10 = codigo % 10;
    codigo = codigo / 10; 
    d11 =codigo % 10;
    codigo = codigo / 10; 
    d12 = codigo % 10; 
    
    
    
    
    resultado1 =  (d12+d11*3+d10+d9*3+d8+d7*3+d6+d5*3+d4+d3*3+d2+d1*3); // Multiplicação das VARIAVEIS IMPARES por 3 e Soma, gerando o total do código e definição da variavel resultado1
    
    resultado2 = resultado1 / 10; // Divisão de toda a soma da var resultado1 para definição da variavel resultado2
    
    resultado2 = 10 * (resultado2 + 1); 
    
    resultado2 = resultado2 - resultado1; 
    
    if (resultado2 % 10 == 0){ // Caso for multiplo de 10, será substituido por 0.
        resultado2 = 0;
    }

    if (resultado2 == d0){
      cout<<endl<< "Parabéns :) \nSeu codigo de barras está correto :)"; // Resposta ao usuário se a numeração fornecida pelo usuário conferir com o código.
    }
     else if (resultado2 != d0){
       cout<<endl<< "Lamento :´( \nSeu dígito verificador está incorreto :("; // Resposta ao usuário caso o valor fornecido não confira com o código.
     }
    return 0; 
}
