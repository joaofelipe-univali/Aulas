#include <iostream>
using namespace std;


int main()
{
    int numero;
    
    cout << "Digite um numero inteiro: ";
    cin >> numero;
    
    if(numero == 0){
        
        cout << "Ele é igual a zero";
        
    } else if (numero < 0){
        
        cout << "Ele é negativo";
        
        
    }else{
        
        cout << "Ele é Positivo";
    }

    return 0;
}
